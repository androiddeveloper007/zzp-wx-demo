<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
<!-- 设置带边框button样式  -->


<!-- 连框颜色值 -->
<item>   
    <shape>   
         <solid android:color="#f97a78" />   
         <corners android:radius="@dimen/dimen_4" />
    </shape>   
</item>   
<!-- 主体背景颜色值 -->  
<item android:bottom="@dimen/dimen_1.5" android:right="@dimen/dimen_1.5" android:top="@dimen/dimen_1.5" android:left="@dimen/dimen_1.5">
     <shape>   
            <gradient android:startColor="#ffffff" android:centerColor="#ffffff" 
        android:endColor="#ffffff" android:type="linear" android:angle="90"  
        android:centerX="0.5" android:centerY="0.5" />  
   
    <padding android:left="0dp" android:top="0dp" android:right="0dp"  
        android:bottom="0dp" />  
       <!-- 应该是圆角 -->
    <corners android:radius="@dimen/dimen_4" />
     </shape>       
</item>  
</layer-list> 