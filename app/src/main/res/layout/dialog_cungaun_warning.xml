<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cg_notice_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cg_notice_close"
            android:layout_width="@dimen/dimen_15"
            android:layout_height="@dimen/dimen_15"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_22"
            android:gravity="center_vertical"
            android:src="@mipmap/cg_close"/>

        <View
            android:id="@+id/view_cg_warning"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dimen_20"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@mipmap/cg_notice_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="五星财富携手渤海银行"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_15" android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共同保障您资金安全"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/dimen_15" android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_cg_warning_product"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_28"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_20"
            android:text="请开通存管账户后再投资"
            android:textColor="@color/cg_warning_dialog_tv"
            android:textSize="@dimen/dimen_13.5"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_12"
            android:visibility="visible"/>
<!--
            android:layout_marginTop="@dimen/dimen_30"-->
        <LinearLayout
            android:id="@+id/ll_cg_apply"
            android:layout_width="@dimen/dimen_220"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginBottom="@dimen/dimen_30"
            android:background="@drawable/btn_radius_cg_notice"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开通渤海银行存管账户"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_13"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cg_apply_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dimen_25">

            <LinearLayout
                android:id="@+id/ll_cg_apply_no"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/btn_radius_cg_notice1"
                android:layout_marginLeft="@dimen/dimen_40"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="稍后再说"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:id="@+id/ll_cg_apply_yes"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="@dimen/dimen_35"
                android:background="@drawable/btn_radius_cg_notice1"
                android:layout_marginRight="@dimen/dimen_40"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上开通"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>