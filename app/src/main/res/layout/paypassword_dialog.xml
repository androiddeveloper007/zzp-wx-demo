<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/cg_notice_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_pay_content"
        android:orientation="vertical" >
        
        <TextView android:id="@+id/tv_pay_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42"
			android:layout_marginTop="@dimen/dimen_10"
            android:text="输入密码"
            android:textSize="@dimen/dimen_15.5"
            android:gravity="center"
            android:textColor="#333333"/>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="0.3px"
			android:layout_marginLeft="@dimen/dimen_20"
			android:layout_marginRight="@dimen/dimen_20"
	        android:background="@android:color/darker_gray"/>
	        
	     <EditText android:id="@+id/et_pay"
	         android:layout_width="@dimen/dimen_150"
	         android:layout_height="@dimen/dimen_30"
	         android:background="@android:color/transparent"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="@dimen/dimen_15"
	         android:gravity="bottom"
	         android:hint="请输入6-20位支付密码"
	         android:textSize="@dimen/dimen_14"
	         android:textColorHint="#a8a8a8"
	         android:paddingBottom="@dimen/dimen_3"
	         android:focusable="true"
	         android:focusableInTouchMode="true"
	         android:singleLine="true"
	         android:maxLength="20"
	         android:inputType="textPassword"
	         />
	     <View 
	        android:layout_width="@dimen/dimen_170"
	        android:layout_height="0.3px"
	        android:layout_gravity="center_horizontal"
	        android:background="@android:color/darker_gray"/>   
	     
	     <TextView android:id="@+id/tv_pay_forgetPwd"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textSize="@dimen/dimen_13"
	         android:text="忘记密码?"
	         android:layout_gravity="center_horizontal"
	         android:layout_marginTop="@dimen/dimen_8"
	         android:layout_marginBottom="@dimen/dimen_20"
	         android:textColor="#4e8df6"
	         />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5px"
		android:layout_marginLeft="@dimen/dimen_20"
		android:layout_marginRight="@dimen/dimen_20"
        android:background="@android:color/darker_gray"
        
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46"
		android:layout_marginBottom="@dimen/dimen_10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_confirm_pay_0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#4e8df6"
            android:gravity="center"
            android:textSize="@dimen/dimen_15.5" />
        
        <View android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/btn_confirm_pay_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="好的"
            android:textColor="#4e8df6"
            android:gravity="center"
            android:textSize="@dimen/dimen_15.5" />
    </LinearLayout>

	</LinearLayout>

</LinearLayout>