<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66eeeeee"
    android:orientation="vertical">

    <include layout="@layout/navigation_cg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@drawable/rl_selector"
        >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_17"
                android:text="手机号码"
                android:textColor="@color/text_color_go"
                android:textSize="@dimen/dimen_15"/>

            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_imageView2"
                android:text="13722637289"
                android:textColor="#999"
                android:textSize="@dimen/dimen_13"/>

            <LinearLayout
                android:id="@+id/ll_imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_18">
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/next"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@color/line">
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_realName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@drawable/rl_selector">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_17"
                android:text="实名认证"
                android:textColor="@color/text_color_go"
                android:textSize="@dimen/dimen_15"/>

            <TextView
                android:id="@+id/textView_nickname"
                android:layout_width="@dimen/dimen_150"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toLeftOf="@+id/imageView4"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text="未认证"
                android:textColor="#999"
                android:textSize="@dimen/dimen_13"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_18"
                android:background="@drawable/next"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@color/line">
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_bankcard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@drawable/rl_selector">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_17"
                android:text="银行卡"
                android:textColor="@color/text_color_go"
                android:textSize="@dimen/dimen_15"/>

            <TextView
                android:id="@+id/tv_bind_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toLeftOf="@+id/imageView6"
                android:text="未绑定"
                android:textColor="#999"
                android:textSize="@dimen/dimen_13"/>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_18"
                android:background="@drawable/next"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:background="@color/line">
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_research"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@drawable/rl_selector">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_17"
                android:text="合格投资者问卷"
                android:textColor="@color/text_color_go"
                android:textSize="@dimen/dimen_15"/>
            <TextView
                android:id="@+id/textView_research"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_toLeftOf="@+id/imageView7"
                android:text=""
                android:textColor="#999"
                android:textSize="@dimen/dimen_13"/>
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_18"
                android:background="@drawable/next"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_safety"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/rl_selector">
        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_17"
            android:text="账户安全"
            android:textColor="@color/text_color_go"
            android:textSize="@dimen/dimen_15"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20"
            android:gravity="right"
            android:textSize="@dimen/dimen_13"/>
        <ImageView
            android:id="@+id/imageView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_18"
            android:background="@drawable/next"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:background="@color/line">
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:background="@drawable/rl_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_17"
            android:text="检查更新"
            android:textColor="@color/text_color_go"
            android:textSize="@dimen/dimen_15"/>
        <TextView
            android:id="@+id/tv_versionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/iv_8"
            android:text="3.5.1"
            android:textColor="#ff999999"
            android:textSize="@dimen/dimen_12"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/iv_8"
            android:background="@drawable/iv_update"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_18"
            android:background="@drawable/next"/>
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
    </View>

    <TextView
        android:id="@+id/tv_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_20"
        android:text="当前版本"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_12"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layout_button_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginBottom="@dimen/dimen_25"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/button_normal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18"/>

    </LinearLayout>

</LinearLayout>