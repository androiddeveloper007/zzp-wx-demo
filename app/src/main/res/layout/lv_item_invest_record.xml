<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--@dimen/dimen_220-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_item"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5">

        <TextView
            android:id="@+id/tv_invest_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_25"
            android:text="五星季享（93天）"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/navigation_cg"
            android:textSize="@dimen/dimen_18"/>

        <TextView
            android:id="@+id/tv_invest_record_title_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invest_record_title"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_8"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:maxLines="2"
            android:text="资产收益权项目201707234"
            android:textColor="@color/navigation_cg"
            android:textSize="@dimen/dimen_15"/>

        <View
            android:layout_width="match_parent" android:layout_below="@+id/tv_invest_record_title_sub"
            android:layout_height="1.5px" android:background="#cccccc"
            android:layout_marginLeft="@dimen/dimen_27" android:layout_marginRight="@dimen/dimen_27"
            android:layout_marginTop="@dimen/dimen_5"/>

        <TextView
            android:id="@+id/tv_invest_record_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_invest_record_days"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="#ffffff"
            android:background="@drawable/tv_bg_cg"
            android:text="年化8.5%" android:padding="@dimen/dimen_5"
            android:textSize="@dimen/dimen_10"/>

        <TextView
            android:id="@+id/tv_invest_record_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_20"
            android:textColor="#ffffff" android:padding="@dimen/dimen_5"
            android:background="@drawable/tv_bg_cg"
            android:text="投资20天"
            android:textSize="@dimen/dimen_10"/>

        <TextView
            android:id="@+id/tv_invest_record_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_below="@+id/tv_invest_record_title_sub"
            android:textColor="#666666"
            android:text="投资金额：10000"
            android:textSize="@dimen/dimen_14"/>
        <TextView
            android:id="@+id/tv_invest_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_below="@+id/tv_invest_record_money"
            android:textColor="#999999"
            android:text="投资时间：2017-07-25  13:20:20"
            android:textSize="@dimen/dimen_13"/>

        <TextView
            android:id="@+id/tv_invest_record_earning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_below="@+id/tv_invest_record_time"
            android:textColor="#666666"
            android:text="预计收益：100"
            android:textSize="@dimen/dimen_14"/>
        <TextView
            android:id="@+id/tv_invest_record_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_below="@+id/tv_invest_record_earning"
            android:textColor="#999999"
            android:text="兑付日期：2017-07-25  13:20:20"
            android:textSize="@dimen/dimen_13"/>

        <TextView
            android:id="@+id/tv_invest_record_status"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_25"
            android:layout_marginRight="@dimen/dimen_25"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_invest_record_earning"
            android:textColor="#ffffff"
            android:background="@drawable/tv_status_bg_cg"
            android:text="收益中"
            android:textSize="@dimen/dimen_11"/>

        <RelativeLayout
            android:id="@+id/rl_keyboard_invest_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_invest_record_status"
            android:layout_marginTop="@dimen/dimen_10"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#cccccc"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dimen_27"
                android:layout_marginRight="@dimen/dimen_27"
                android:layout_marginTop="@dimen/dimen_5"/>

            <TextView
                android:id="@+id/tv_code_used0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="已使用K码："
                android:textColor="#999999"
                android:textSize="@dimen/dimen_13"/>

            <TextView
                android:id="@+id/tv_code_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_code_used0"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_9"
                android:text="加载中"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_13"/>

            <TextView
                android:id="@+id/tv_code_fanxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="加载中"
                android:textColor="@color/navigation_cg"
                android:textSize="@dimen/dimen_13"/>

            <TextView
                android:id="@+id/tv_code_fanxian0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_code_fanxian"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="返现金额 (元)"
                android:textColor="#999999"
                android:textSize="@dimen/dimen_13"/>

            <TextView
                android:id="@+id/tv_code_result_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_code_used0"
                android:layout_toRightOf="@+id/iv_code_result_tip"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_8"
                android:text="加载中"
                android:textColor="@color/navigation_cg"
                android:textSize="@dimen/dimen_13"/>

            <ImageView
                android:id="@+id/iv_code_result_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_keyboard_result1"
                android:layout_below="@+id/tv_code_used0"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_9"
            />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>