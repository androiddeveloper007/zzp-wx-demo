<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slider="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f5f5f5">
    <include layout="@layout/navigation" />

    <com.cstz.common.view.MySlider
        android:id="@+id/myslider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        slider:selectColor="@color/sliderSelectColor"
        slider:defaultColor="@color/sliderDefaultColor"
        slider:text="未使用,已使用,已过期"
        slider:weightSum="3"
		 ></com.cstz.common.view.MySlider>
      <RelativeLayout 
        android:id="@+id/home_redenvelope_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        >
	    <com.cstz.ui.xlistview.XListView
	        android:id="@+id/listView_hongbao"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#f5f5f5"
	        android:divider="@null">
	    </com.cstz.ui.xlistview.XListView>
	</RelativeLayout>
</LinearLayout>
