<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/cg_repayment_item_bg"
        android:layout_height="@dimen/dimen_200"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5">

        <TextView
            android:id="@+id/tv_repayment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_25"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:text="五星季享（93天）"
            android:textColor="@color/text_color_7"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_16"/>

        <LinearLayout
            android:id="@+id/ll_tv_repayment_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_repayment_title"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_repayment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical|bottom"
                android:maxLines="1"
                android:text="5000000"
                android:textColor="@color/navigation_cg"
                android:textSize="@dimen/dimen_28"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（元）"
                android:textSize="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_2"
                android:textColor="@color/navigation_cg"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_repayment_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_below="@+id/ll_tv_repayment_money"
            android:textColor="#999999"
            android:text="最后还款日：2017-07-25"
            android:textSize="@dimen/dimen_12"/>

        <TextView
            android:id="@+id/tv_repayment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_below="@+id/tv_repayment_end_day"
            android:textColor="#999999"
            android:text="还款时间：2017-07-25"
            android:textSize="@dimen/dimen_12"/>

        <TextView
            android:id="@+id/tv_repayment_status"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_30"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_tv_repayment_money"
            android:textColor="#ffffff"
            android:background="@drawable/btn_radius_cg_notice1"
            android:padding="@dimen/dimen_3"
            android:text="还款"
            android:layout_marginTop="@dimen/dimen_12"
            android:textSize="@dimen/dimen_16"/>

        <TextView
            android:id="@+id/tv_repayment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#999999"
            android:text="待还款"
            android:textSize="@dimen/dimen_14"
            android:layout_marginBottom="@dimen/dimen_15"/>

    </RelativeLayout>

</LinearLayout>