<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/navigation_cg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12"
        android:background="@color/base_end_color_pressed"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_bank_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25"
            android:background="@mipmap/bank_card_bg_cg"/>

        <TextView
            android:id="@+id/tv_bankcard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_140"
            android:text="6666 **** **** 9999"
            android:letterSpacing="0.3"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_btn_bankcard_cg"
        android:layout_width="@dimen/dimen_250"
        android:layout_height="@dimen/dimen_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/button_normal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实卡管理"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="点击跳转至渤海银行修改银行卡页面"
        android:textColor="@color/text_color_4"
        android:textSize="@dimen/dimen_13"/>

</LinearLayout>