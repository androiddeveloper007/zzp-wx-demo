<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mykeyboard="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root_view"
    android:orientation="vertical" >

    <include layout="@layout/navigation" />
	<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">

		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dimen_70"
		        android:layout_marginTop="@dimen/dimen_50"
		        android:background="@drawable/bg_item"
		        android:layout_marginLeft="@dimen/dimen_8"
		        android:layout_marginRight="@dimen/dimen_8">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <RelativeLayout
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.3"
				        android:layout_marginLeft="@dimen/dimen_20">
				        <TextView
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="新支付密码"
				            android:textColor="#424242"
				            android:textSize="@dimen/dimen_15"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				    <RelativeLayout
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.7">
				        <EditText
			                android:id="@+id/home_updatepaypwd_update_newpwd"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:background="@null"
					        android:textCursorDrawable="@drawable/text_cursor"
					        android:hint="字母加数字至少8位"
					        android:inputType="textPassword"
					        android:textSize="@dimen/dimen_15"
					        android:singleLine="true"
					        android:textColor="#424242"
					        android:textColorHint="#cccccc"/>
				    </RelativeLayout>
				</LinearLayout>
		    </RelativeLayout>

		    <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dimen_70"
		        android:layout_marginTop="@dimen/dimen_15"
		        android:background="@drawable/bg_item"
		        android:layout_marginLeft="@dimen/dimen_8"
		        android:layout_marginRight="@dimen/dimen_8">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <RelativeLayout
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.3"
				        android:layout_marginLeft="@dimen/dimen_20">
				        <TextView
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="确认新密码"
				            android:textColor="#424242"
				            android:textSize="@dimen/dimen_15"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				    <RelativeLayout
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.7">
				   		<EditText
			                android:id="@+id/home_updatepaypwd_update_quepwd"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:background="@null"
					        android:textCursorDrawable="@drawable/text_cursor"
					        android:hint="确认新支付密码"
					        android:inputType="textPassword"
					        android:textSize="@dimen/dimen_15"
					        android:singleLine="true"
					        android:textColor="#424242"
					        android:textColorHint="#cccccc"/>
				    </RelativeLayout>
				</LinearLayout>
		    </RelativeLayout>

		     <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_72"
		        android:layout_marginTop="@dimen/dimen_20">
		        <LinearLayout
		            android:id="@+id/home_updatepaypwd_update_button"
		            android:background="@drawable/button_normal"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_alignParentTop="true"
		            android:layout_marginBottom="@dimen/dimen_12"
		            android:layout_marginLeft="@dimen/dimen_15"
		            android:layout_marginRight="@dimen/dimen_15"
		            android:layout_marginTop="@dimen/dimen_12"
		            android:gravity="center"
		            android:orientation="vertical" >

		            <TextView
		                android:id="@+id/textView7"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="修改"
		                android:textColor="#FFFFFF"
		                android:textSize="@dimen/dimen_18" />
		        </LinearLayout>
		    </RelativeLayout>

		</LinearLayout>
    </ScrollView>
</LinearLayout>