<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_end_color_pressed"
    android:orientation="vertical">

    <include layout="@layout/navigation_cg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_bank_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:background="@drawable/cg_bankcard"/>

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_45"
            android:layout_marginTop="@dimen/dimen_35"/>

        <TextView
            android:id="@+id/tv_bankcard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bank_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_30"
            android:letterSpacing="0.1"
            android:text="6666 **** **** 9999"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18"/>

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**银行"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_80"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>

        <TextView
            android:id="@+id/tv_bank_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_bankcard_num"
            android:layout_marginRight="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="持卡人：**"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35"
        android:text="温馨提示："
        android:layout_marginTop="@dimen/dimen_10"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_14"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="如需更改绑定卡请联系客服。"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_14"/>


    <LinearLayout
        android:id="@+id/home_recharge_button"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/button_normal"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改绑定卡"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dimen_18"/>

    </LinearLayout>

</LinearLayout>