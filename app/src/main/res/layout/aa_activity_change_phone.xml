<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/navigation_cg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_12"
        android:background="@color/divider_color"/>

    <ImageView
        android:layout_width="@dimen/dimen_140"
        android:layout_height="@dimen/dimen_140"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/change_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你当前手机号码为"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_13"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_change_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***"
        android:textColor="@color/navigation_cg"
        android:textSize="@dimen/dimen_13"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改成功后请使用新手机号重新登录"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_13"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_10"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10">

        <com.cstz.MyWidget.MClearEditText
            android:id="@+id/et_change_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/change_phone_btn_bg"
            android:hint="新手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="#424242"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_70"
            android:paddingRight="@dimen/dimen_40"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="27.33dp"
            android:src="@mipmap/mobile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_32"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_change_phone_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_35"
        android:background="@drawable/button_normal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_18"/>

    </LinearLayout>


</LinearLayout>