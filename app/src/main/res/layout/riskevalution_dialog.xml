<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title_luckydraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:gravity="center"
        android:text=""
        android:textColor="@color/key_text"
        android:textSize="@dimen/dimen_16"
        android:layout_marginLeft="@dimen/dimen_15"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_msg_luckdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_10"
            android:text="321"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_13.5" />

        <RelativeLayout
            android:id="@+id/rl_tv_luckydraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_daojishi_luckdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="top"
                android:layout_centerInParent="true"
                android:textColor="@color/textcolor_red"
                android:textSize="@dimen/dimen_15.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="top"
				android:layout_toLeftOf="@+id/tv_daojishi_luckdraw"
                android:textColor="#333333"
                android:paddingTop="@dimen/dimen_2"
                android:textSize="@dimen/dimen_13.5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="top"
                android:layout_toRightOf="@+id/tv_daojishi_luckdraw"
                android:layout_centerHorizontal="true"
                android:textColor="#333333"
                android:paddingTop="@dimen/dimen_2"
                android:textSize="@dimen/dimen_13.5" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_confirm_pay_0"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="稍后"
            android:textColor="#4e8df6"
            android:textSize="@dimen/dimen_15.5" />

        <View
            android:id="@+id/line_luckdraw_btn"
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/btn_confirm_pay_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#4e8df6"
            android:textSize="@dimen/dimen_15.5" />
    </LinearLayout>

</LinearLayout>