<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cg_notice_bg"
        android:paddingBottom="@dimen/dimen_25">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认退出登录？"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimen_25"
            android:layout_marginRight="@dimen/dimen_25"
            android:layout_marginTop="@dimen/dimen_40"/>

        <LinearLayout
            android:id="@+id/layout_button_no"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_35"
            android:background="@drawable/button_normal"
            android:layout_below="@+id/tv_exit"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_40"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_left_btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_16"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_button_yes"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_35"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:layout_below="@+id/tv_exit"
            android:layout_marginTop="@dimen/dimen_40"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_right_btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_16"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button_center"
            android:layout_width="@dimen/dimen_100"
            android:layout_height="@dimen/dimen_35"
            android:background="@drawable/button_normal"
            android:layout_below="@+id/tv_exit"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_center_btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="知道了"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_16"/>

        </LinearLayout>

        <View
            android:id="@+id/exit_cg_fill_view"
            android:layout_width="match_parent" android:visibility="visible"
            android:layout_height="@dimen/dimen_15" android:layout_below="@+id/layout_button_no"/>
    </RelativeLayout>

</LinearLayout>