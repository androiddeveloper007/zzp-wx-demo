<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_180">

    <TextView
        android:id="@+id/tv_repayment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginRight="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="五星季享（93天）"
        android:textColor="@color/text_color_2"
        android:textSize="@dimen/dimen_16"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_repayment_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repayment_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_15"
        android:gravity="center"
        android:text="5000000（元）"
        android:textColor="@color/navigation_cg"
        android:textSize="@dimen/dimen_28"/>

    <ImageView
        android:id="@+id/iv_vp_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repayment_title"
        android:layout_toLeftOf="@+id/tv_repayment_money"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:visibility="gone"
        android:src="@mipmap/left"/>
    <ImageView
        android:id="@+id/iv_vp_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repayment_title"
        android:layout_toRightOf="@+id/tv_repayment_money"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_20"
        android:visibility="gone"
        android:src="@mipmap/right"/>

    <TextView
        android:id="@+id/tv_repayment_end_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repayment_money"
        android:layout_marginLeft="@dimen/dimen_35"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="最后还款日：2017-07-25"
        android:textColor="#bbbbbb"
        android:textSize="@dimen/dimen_12"/>

    <TextView
        android:id="@+id/tv_repayment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repayment_end_day"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_3"
        android:text="还款时间：2017-07-25"
        android:textColor="#999999"
        android:textSize="@dimen/dimen_12"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_repayment_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:text="还款"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_16"
        android:background="@drawable/button_normal"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_repayment_status"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius_cg_notice1"
        android:gravity="center"
        android:padding="@dimen/dimen_2"
        android:layout_marginRight="@dimen/dimen_25"
        android:text="待还款"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_16"
        android:layout_alignBottom="@+id/tv_repayment_end_day"
        android:layout_alignParentRight="true"/>

</RelativeLayout>