<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mykeyboard="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/root_view"
    android:background="#f5f5f5">

    <include layout="@layout/navigation" />
    <ScrollView
        android:id="@+id/front_invest_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" >
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_100"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/radius_background"
		        android:orientation="vertical"
		        android:weightSum="2">
		        <RelativeLayout 
		            android:layout_weight="1.1"
		            android:layout_width="match_parent"
		            android:layout_height="0dp">
		            <TextView
			            android:id="@+id/textView_title"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="@dimen/dimen_15"
			            android:textSize="@dimen/dimen_18"
						android:lineSpacingExtra="@dimen/dimen_3" />
		        </RelativeLayout>
		        <RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content">
		            <LinearLayout 
			            android:layout_width="match_parent"
			            android:layout_height="@dimen/dimen_0.5"
			            android:background="@color/line"
			            android:layout_marginLeft="@dimen/dimen_10"
			            android:layout_marginRight="@dimen/dimen_10">
			        </LinearLayout>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_weight="1"
		            android:layout_width="match_parent"
		            android:layout_height="0dp">
		            <LinearLayout 
		                android:orientation="horizontal"
		        		android:weightSum="2"
		        		android:layout_width="match_parent"
		        		android:layout_height="match_parent">
		                <RelativeLayout 
				            android:layout_weight="1"
				            android:layout_width="0dp"
				            android:layout_height="match_parent">
				            <TextView
					            android:id="@+id/textView_shouyi"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_centerVertical="true"
					            android:layout_marginLeft="@dimen/dimen_15"
					            android:textSize="@dimen/dimen_16"
					            android:textColor="#999999"
					            android:text="年化收益" />
				            <TextView
					            android:id="@+id/textView_annualRate"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_centerVertical="true"
					            android:layout_toRightOf="@+id/textView_shouyi"
					            android:layout_marginLeft="@dimen/dimen_5"
					            android:textColor="#e04745"
					            android:textSize="@dimen/dimen_16"
					            android:text="13.00%" />
				        </RelativeLayout>
				        <LinearLayout 
				            android:layout_width="@dimen/dimen_1"
				            android:layout_height="match_parent"
				            android:background="@color/line"
				            android:layout_marginTop="@dimen/dimen_10"
				            android:layout_marginBottom="@dimen/dimen_10">
				        </LinearLayout>
				        <RelativeLayout 
				            android:layout_weight="1"
				            android:layout_width="0dp"
				            android:layout_height="match_parent">
				            <TextView
					            android:id="@+id/textView_deadline"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_centerVertical="true"
					            android:layout_alignParentRight="true"
					            android:layout_marginRight="@dimen/dimen_15"
					            android:textColor="#999999"
					            android:textSize="@dimen/dimen_16"
					            android:text="" />

				            <TextView
				                android:id="@+id/textView_qixian"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_alignBaseline="@+id/textView_deadline"
				                android:layout_alignBottom="@+id/textView_deadline"
				                android:layout_toLeftOf="@+id/textView_deadline"
				                android:layout_marginRight="@dimen/dimen_5"
				                android:text="期限"
				                android:textColor="#999999"
				                android:textSize="@dimen/dimen_16" />

				        </RelativeLayout>
		            </LinearLayout>
		        </RelativeLayout>
		    </LinearLayout>
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_50"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/radius_background"
		        android:orientation="horizontal"
		        android:weightSum="2">
		        <RelativeLayout 
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="match_parent">
		            <TextView
			            android:id="@+id/textView1"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="@dimen/dimen_15"
			            android:textSize="@dimen/dimen_16"
			            android:text="投资金额" />

		            <TextView
		                android:id="@+id/front_invest_money"
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:gravity="center_vertical"
		                android:layout_marginLeft="@dimen/dimen_5"
		                android:text=""
		                android:layout_toRightOf="@+id/textView1"
		                android:textSize="@dimen/dimen_16" />

		            <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:layout_centerVertical="true"
			            android:layout_toRightOf="@+id/front_invest_money"
			            android:layout_alignParentRight="true"
			            android:layout_marginLeft="@dimen/dimen_1"
			            android:textSize="@dimen/dimen_16"
			            android:textColor="#999999"
			            android:text="元" />
		        </RelativeLayout>
		        <RelativeLayout 
		            android:layout_weight="1"
		            android:layout_width="0dp"
		            android:layout_height="match_parent">
		            <TextView
			            android:id="@+id/textView2"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
		                android:layout_toLeftOf="@+id/textView_yjsy"
		                android:layout_marginRight="@dimen/dimen_5"
			            android:textSize="@dimen/dimen_16"
			            android:textColor="#999999"
			            android:ellipsize="middle"
			            android:singleLine="true"
			            android:text="预计收益" />
		            <TextView
			            android:id="@+id/textView_yjsy"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:gravity="center_vertical"
			            android:layout_centerVertical="true"
		                android:layout_toLeftOf="@+id/text_yuan"
		                android:layout_marginRight="@dimen/dimen_2"
			            android:textSize="@dimen/dimen_16"
			            android:textColor="#e04745"
			            android:text="" />
		            <TextView
		                android:id="@+id/text_yuan"
			            android:layout_width="wrap_content"
			            android:layout_height="match_parent"
			            android:layout_alignParentRight="true"
			            android:gravity="center_vertical"
					    android:layout_marginRight="@dimen/dimen_15"
			            android:textSize="@dimen/dimen_16"
			            android:textColor="#999999"
			            android:text="元" />
		        </RelativeLayout>
		    </LinearLayout>
		    <LinearLayout
		        android:id="@+id/linearlayout_hongbao"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_50"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/radius_background"
		        android:weightSum="1"
		        android:visibility="gone">
		        <RelativeLayout 
		            android:layout_weight="0.25"
		            android:layout_width="0dp"
		            android:layout_height="match_parent">
			        <TextView
			            android:id="@+id/textView4"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="@dimen/dimen_15"
			            android:textSize="@dimen/dimen_16"
			            android:text="红包" />
			     </RelativeLayout>
			     <RelativeLayout 
			        android:id="@+id/layout_hobao"
					android:background="@drawable/rl_selector_invest"
		            android:layout_weight="0.75"
		            android:layout_width="0dp"
		            android:layout_height="match_parent">
			        <TextView
			            android:id="@+id/textview_hongbao"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_toLeftOf="@+id/image_hongbao"
			            android:layout_marginRight="@dimen/dimen_5"
			            android:textSize="@dimen/dimen_14"
			            android:textColor="#999999"
			            android:text="" />
			        <ImageView 
			            android:id="@+id/image_hongbao"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:layout_marginRight="@dimen/dimen_15"
			            android:background="@drawable/next"/>
			     </RelativeLayout>
		    </LinearLayout>

			<RelativeLayout
				android:id="@+id/rl_keyboard"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:layout_marginLeft="@dimen/dimen_8"
				android:layout_marginRight="@dimen/dimen_8"
				android:layout_marginTop="@dimen/dimen_5">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_10"
					android:text="使用K码"
					android:textColor="@color/text_color_1"
					android:textSize="@dimen/dimen_16"
					android:textStyle="bold"/>
				<TextView
					android:id="@+id/tv_invest_keyboard_introduce"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_marginRight="@dimen/dimen_5"
					android:layout_marginTop="@dimen/dimen_10"
					android:text="【了解什么是K码】"
					android:textColor="@color/invest_text_color_selector"
					android:textSize="@dimen/dimen_14"/>
				<!--android:maxLength="10"-->
				<com.cstz.MyWidget.MClearEditText
					android:id="@+id/et_invest_keyboard"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dimen_48"
					android:layout_below="@+id/tv_invest_keyboard_introduce"
					android:layout_marginTop="@dimen/dimen_10"
					android:inputType="textVisiblePassword"
					android:background="@drawable/radius_background"
					android:hint="请输入K码"
					android:maxLength="10"
					android:paddingLeft="@dimen/dimen_15"
					android:paddingRight="@dimen/dimen_30"
					android:textColorHint="@color/text_color_4"
					android:textSize="@dimen/dimen_16"/>
				<LinearLayout
					android:id="@+id/ll_keyboard_result"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dimen_20"
					android:visibility="gone"
					android:layout_below="@+id/et_invest_keyboard"
					android:layout_marginTop="@dimen/dimen_5"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/iv_keyboard_result"
						android:layout_width="@dimen/dimen_12"
						android:layout_height="@dimen/dimen_12"
						android:src="@drawable/icon_keyboard_result"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="@dimen/dimen_15"/>
					<TextView
						android:id="@+id/tv_invest_keyboard_result"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/dimen_15"
						android:layout_gravity="center_vertical"
						android:text=""
						android:textColor="@color/text_color_4"
						android:textSize="@dimen/dimen_11"/>
				</LinearLayout>
			</RelativeLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_50"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/radius_background"
		        android:orientation="horizontal"
		        android:weightSum="1" android:visibility="gone">
		        <RelativeLayout 
		            android:layout_weight="0.3"
		            android:layout_width="0dp"
		            android:layout_height="match_parent">
			        <TextView
			            android:id="@+id/textView3"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="@dimen/dimen_15"
			            android:textSize="@dimen/dimen_16"
			            android:text="支付密码" />
		        </RelativeLayout>
		        <RelativeLayout 
		            android:layout_weight="0.7"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:focusable="true"  
   					android:focusableInTouchMode="true">
			        
			        <EditText
		                android:id="@+id/front_invest_dealpwd"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:background="@null"
				        android:textCursorDrawable="@drawable/text_cursor"
				        android:hint="请输入支付密码"
				        android:inputType="textPassword"
				        android:textSize="@dimen/dimen_15"
				        android:singleLine="true"
				        android:textColor="#424242"
				        android:textColorHint="#cccccc" />
			    </RelativeLayout>
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_35" android:visibility="gone">
		        <TextView 
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="2"
		            android:gravity="center_vertical"
		            android:layout_marginLeft="@dimen/dimen_18"
		            android:textSize="@dimen/dimen_12"
		            android:text="温馨提示:支付密码默认为登录密码"
		            android:textColor="#FFBBBBBB"
		            />
		        <TextView 
		            android:id="@+id/tv_invest_forget_pwd"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:gravity="center_vertical|right"
		            android:paddingRight="@dimen/dimen_10"
		            android:textSize="@dimen/dimen_13"
		            android:text="忘记密码?"
		            android:textColor="#419fdf"
		            />
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_marginTop="@dimen/dimen_30"
		        android:orientation="horizontal">
		        <CheckBox
		            android:id="@+id/checkBox_type"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/dimen_10"
		            android:layout_alignParentLeft="true"
		            android:layout_alignParentTop="true"
		            android:text="我已同意"
		            android:textColor="#999999"
		            android:checked="true" />
				<TextView
					android:id="@+id/tv_invest_agreement"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="《项目认购协议》"
					android:textColor="@color/layoutRipple_color" android:textSize="@dimen/dimen_15"/>
		    </LinearLayout>
		    <RelativeLayout
		        android:id="@+id/Relative"
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_70"
		        android:clickable="true" >
		        <LinearLayout
		            android:id="@+id/invest_button"
		            android:background="@drawable/button_normal"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_alignParentLeft="true"
		            android:layout_alignParentTop="true"
		            android:layout_marginBottom="@dimen/dimen_12"
		            android:layout_marginLeft="@dimen/dimen_12"
		            android:layout_marginRight="@dimen/dimen_12"
		            android:layout_marginTop="@dimen/dimen_12"
		            android:gravity="center"
		            android:orientation="vertical" >
		
		            <TextView
		                android:id="@+id/textView8"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="立即投资"
		                android:textColor="#FFFFFF"
		                android:textSize="@dimen/dimen_18" />
		        </LinearLayout>
		    </RelativeLayout>
         </LinearLayout>
     </ScrollView>
</LinearLayout>