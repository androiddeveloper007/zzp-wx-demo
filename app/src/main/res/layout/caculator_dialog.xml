<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:NiceSpinner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_caculator_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:background="@drawable/caculator_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="投资金额"
                android:textColor="#ff555555"
                android:textSize="@dimen/dimen_14" />

            <EditText
                android:id="@+id/et_money_dia"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dimen_11"
                android:textColor="@color/key_text"
                android:textSize="@dimen/dimen_14"
                android:maxLength="16"
                android:background="@drawable/edittext_bg" />

            <TextView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="元"
                android:textColor="#ff555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="投资期限"
                android:textColor="#ff555555"
                android:textSize="@dimen/dimen_14" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/custom_sinnper_day"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:textSize="@dimen/dimen_14"
                    NiceSpinner:backgroundSelector="@drawable/edittext_bg"
                    android:inputType="number"
                    NiceSpinner:textTint="#ff333333" />
            <TextView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="天"
                android:textColor="#ff555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="年化利率"
                android:textColor="#ff555555"
                android:textSize="@dimen/dimen_14" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/custom_sinnper_lilv"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_14"
                NiceSpinner:backgroundSelector="@drawable/edittext_bg"
                android:inputType="numberDecimal"
                NiceSpinner:textTint="#ff333333" />
            <TextView
                android:layout_width="@dimen/dimen_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="%"
                android:textColor="#ff555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5" />

            <Button
                android:id="@+id/btn_reset_dia"
                android:layout_width="@dimen/dimen_75"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="@dimen/dimen_11"
                android:text="重置"
                android:background="@drawable/button_normal_caculator_1"
                android:textSize="@dimen/dimen_15" />

            <Button
                android:id="@+id/btn_caculate_dia"
                android:layout_width="@dimen/dimen_75"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="@dimen/dimen_13"
                android:text="计算"
                android:textColor="@color/white"
                android:background="@drawable/button_normal"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/dimen_90"
                android:layout_height="match_parent"
                android:background="#f5f5f5"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="到期收益"
                android:textColor="#ff555555"
                android:textSize="@dimen/dimen_14" />

            <TextView
                android:id="@+id/tv_result_dia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/dimen_11"
                android:text="0.00元"
                android:textColor="@color/red2"
                android:textSize="@dimen/dimen_15"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30" />

</LinearLayout>