<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root_view"
    android:orientation="vertical" >

    <include layout="@layout/navigation_cg" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" android:fillViewport="true">
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
		    <RelativeLayout
		 	    android:id="@+id/relativelayou_add" 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_100"
		        android:layout_marginTop="@dimen/dimen_30"
		        android:background="@drawable/bg_item"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:orientation="horizontal"
			        android:weightSum="1" >
			        <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
						android:layout_marginLeft="@dimen/dimen_10"
				        android:layout_weight="0.2">
				        <ImageView 
				            android:layout_width="@dimen/dimen_35"
				            android:layout_height="@dimen/dimen_35"
				            android:id="@+id/bankcard_img"
				            android:layout_centerVertical="true"
				            android:layout_centerHorizontal="true"/>
				    </RelativeLayout>
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.8">
				        <RelativeLayout 
			              android:layout_width="wrap_content"
			              android:layout_height="wrap_content"	              
			              android:layout_centerVertical="true"
			              android:layout_marginLeft="@dimen/dimen_5">
					        <TextView 
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:text=""
					            android:textSize="@dimen/dimen_18"
					            android:id="@+id/bankcard_name"/>
					        <TextView 
					            android:id="@+id/textview1"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_below="@+id/bankcard_name"
					            android:layout_marginTop="@dimen/dimen_5"
					            android:text="卡号: "
					            android:textColor="#999999"
					            android:textSize="@dimen/dimen_14"/>
					        <TextView 
					            android:id="@+id/bankcard_cardid"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:layout_below="@+id/bankcard_name"
					            android:layout_toRightOf="@+id/textview1"
					            android:layout_marginTop="@dimen/dimen_5"
					            android:text=""
					            android:textColor="#999999"
					            android:textSize="@dimen/dimen_14"/>
		
					    </RelativeLayout>
				    </RelativeLayout>
			    </LinearLayout>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dimen_70"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/bg_item"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.3"
				        android:layout_marginLeft="@dimen/dimen_20">
				        <TextView 
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="提现金额"
				            android:textColor="#424242"
				            android:textSize="@dimen/dimen_15"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.7">
				        <EditText
				            android:id="@+id/home_tixian_money"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:background="@null"
				            android:inputType="phone"
				            android:hint="请输入提现金额"
		              		android:textColorHint="#cccccc"
				            android:textCursorDrawable="@drawable/text_cursor"
				            android:textSize="@dimen/dimen_15"
				            android:textColor="#424242" />
				    </RelativeLayout>
				</LinearLayout>
				   
		    </RelativeLayout>
		    <!--  -->
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dimen_20"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:layout_marginLeft="@dimen/dimen_15"
		        android:layout_marginRight="@dimen/dimen_15">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:background="#ffffff"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.3"
				        android:layout_marginLeft="@dimen/dimen_10">
				        <TextView 
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="可提现金额"
				            android:textColor="#424242"
				            android:textSize="@dimen/dimen_12"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.7">
				        <TextView 
				            android:id="@+id/home_tixian_usableSum"
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="0.0元"
				            android:textColor="#e04745"
				            android:textSize="@dimen/dimen_12"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				</LinearLayout>
				   
		    </RelativeLayout>
		    <!--  -->
		    <RelativeLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/dimen_70"
		        android:layout_marginTop="@dimen/dimen_5"
		        android:background="@drawable/bg_item"
		        android:layout_marginLeft="@dimen/dimen_5"
		        android:layout_marginRight="@dimen/dimen_5">
		        <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginTop="0dp"
			        android:orientation="horizontal"
			        android:weightSum="1" >
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.3"
				        android:layout_marginLeft="@dimen/dimen_20">
				        <TextView 
				            android:layout_height="wrap_content"
				            android:layout_width="wrap_content"
				            android:text="支付密码"
				            android:textColor="#424242"
				            android:textSize="@dimen/dimen_15"
				            android:layout_centerVertical="true"/>
				    </RelativeLayout>
				    <RelativeLayout 
				        android:layout_width="0dp"
				        android:layout_height="match_parent"
				        android:layout_weight="0.7">
				        
				        <EditText 
				            android:id="@+id/home_tixian_dealpwd"
					        android:layout_width="match_parent"
					        android:layout_height="match_parent"
					        android:background="@null"
					        android:textCursorDrawable="@drawable/text_cursor"
					        android:hint="请输入支付密码"
					        android:inputType="textPassword"
					        android:textSize="@dimen/dimen_15"
					        android:singleLine="true"
					        android:textColor="#424242"
					        android:textColorHint="#cccccc"/>
				        
				    </RelativeLayout>
				</LinearLayout>
		    </RelativeLayout>
			<RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_72"
		        android:layout_marginTop="@dimen/dimen_20">
		        <LinearLayout
		            android:id="@+id/home_tixian_button"
		            android:background="@drawable/button_normal"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_alignParentTop="true"
		            android:layout_marginBottom="@dimen/dimen_12"
		            android:layout_marginLeft="@dimen/dimen_15"
		            android:layout_marginRight="@dimen/dimen_15"
		            android:layout_marginTop="@dimen/dimen_12"
		            android:gravity="center"
		            android:orientation="vertical" >
		
		            <TextView
		                android:id="@+id/textview_step"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="提现"
		                android:textColor="#FFFFFF"
		                android:textSize="@dimen/dimen_18" />
		        </LinearLayout>
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="@dimen/dimen_20"
		        android:layout_marginTop="@dimen/dimen_5">
		        <TextView
	                android:id="@+id/textview_help_tx"
	                android:layout_marginRight="@dimen/dimen_15"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:text="提现帮助"
					android:visibility="gone"
	                android:textColor="#419fdf"
	                android:textSize="@dimen/dimen_15" />
		    </RelativeLayout>
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
				android:layout_weight="1"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_withdraw_0"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_gravity="center_horizontal"
					android:text="温馨提示："
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_14"/>

				<View
					android:layout_width="match_parent"
					android:layout_height="1.5px"
					android:layout_marginTop="@dimen/dimen_5"
					android:background="@color/text_color_4"/>
				<TextView
					android:id="@+id/tv_withdraw_1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginRight="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_5"
					android:text="凡是在五星财富申请提现的用户，提现费用收取2元/笔，充值未投资15天内提现加收本金0.5%充值服务费。"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_12"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginRight="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_3"
					android:text="1. 请确保您的银行卡账户姓名和您网站上的真实姓名一致。"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_12"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginRight="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_3"
					android:text="2. 每笔提现金额最少为100元以上,每天提现金额最高不能超过2000000元。"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_12"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginRight="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_3"
					android:text="3. 提现一至两个工作日到账（国家节假日除外），请耐心等待。"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_12"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="@dimen/dimen_15"
					android:layout_marginRight="@dimen/dimen_15"
					android:layout_marginTop="@dimen/dimen_3"
					android:layout_marginBottom="@dimen/dimen_10"
					android:text="4. 如遇银行系统维护或入账延迟时，提现申请两个工作日后仍未到账，请与客服联系。"
					android:textColor="@color/text_color_2"
					android:textSize="@dimen/dimen_12"/>
			</LinearLayout>
		 </LinearLayout>
    </ScrollView>
</LinearLayout>
