<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/list_item_middle1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50" >

        <ImageView
            android:id="@+id/table_item_image"
            android:layout_width="@dimen/dimen_22"
            android:layout_height="@dimen/dimen_22"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10" />

        <TextView
            android:id="@+id/table_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/table_item_image"
            android:text=""
            android:textColor="@color/item_text"
            android:textSize="@dimen/dimen_14" />

        <TextView
            android:id="@+id/table_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/table_item_title"
            android:layout_alignBottom="@+id/table_item_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/table_item_title"
            android:text=""
            android:textColor="@color/item_msg"
            android:textSize="@dimen/dimen_14" />

        <TextView
            android:id="@+id/table_item_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/table_item_arrow"
            android:text=""
            android:textColor="@color/item_msg"
            android:textSize="@dimen/dimen_14" />

        <ImageView
            android:id="@+id/table_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:src="@drawable/next" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_alignLeft="@+id/table_item_image"
            android:layout_alignRight="@+id/table_item_arrow"
            android:layout_alignParentBottom="true"
            android:background="@color/line"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>