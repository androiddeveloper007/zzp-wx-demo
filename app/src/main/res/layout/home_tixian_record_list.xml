<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="#f5f5f5"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
 	    android:id="@+id/relativelayou_add" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70">
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="0dp"
	        android:background="#ffffff"
	        android:orientation="horizontal"
	        android:weightSum="1" >
	        <RelativeLayout 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.2">
		        <ImageView 
		            android:layout_width="@dimen/dimen_35"
		            android:layout_height="@dimen/dimen_35"
		            android:id="@+id/bankcard_img"
		            android:layout_centerVertical="true"
		            android:layout_centerHorizontal="true"/>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.5">
		        <RelativeLayout 
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"	              
	              android:layout_centerVertical="true">
			        <TextView 
			            android:id="@+id/textView_bankName"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text=""
			            android:textSize="@dimen/dimen_14"/>
			        <TextView 
			            android:id="@+id/textView_acount"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_toRightOf="@+id/textView_bankName"
			            android:layout_alignBaseline="@+id/textView_bankName"
			            android:layout_marginTop="@dimen/dimen_5"
			            android:text=""
			            android:textSize="@dimen/dimen_14"/>
			        <TextView 
			            android:id="@+id/textView_time"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_below="@+id/textView_bankName"
			            android:layout_marginTop="@dimen/dimen_5"
			            android:text=""
			            android:textColor="#999999"
			            android:textSize="@dimen/dimen_12"/>
			    </RelativeLayout>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="0.3">
		        <TextView 
		            android:id="@+id/textView_sum"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textColor="#ea544a"
		            android:layout_centerVertical="true"
		            android:layout_marginRight="@dimen/dimen_15"
		            android:layout_alignParentRight="true"
		            android:textSize="@dimen/dimen_14"/>
		    </RelativeLayout>
	    </LinearLayout>
	    <ImageView 
	        android:id="@+id/imageViews_tatus"
	        android:layout_width="@dimen/dimen_60"
	        android:layout_height="@dimen/dimen_35"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/dimen_100"
	        android:layout_centerVertical="true"
	        android:background="@drawable/ygq"/>
    </RelativeLayout>
</LinearLayout>