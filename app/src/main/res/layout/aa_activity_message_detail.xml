<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/navigation_cg"/>

    <RelativeLayout
        android:id="@+id/home_maildetail_record_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_mailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:paddingLeft="@dimen/dimen_15"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/dimen_18"
                android:visibility="gone"/>

            <!--<WebView
                android:id="@+id/webView_mailContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_20"/>-->
            <TextView
                android:id="@+id/tv_mailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_30"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/dimen_10"
                android:textColor="@color/text_color_7"
                android:textSize="@dimen/dimen_15"
            />

            <TextView
                android:id="@+id/textView_sendTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:gravity="right"
                android:paddingRight="@dimen/dimen_15"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/dimen_14"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>