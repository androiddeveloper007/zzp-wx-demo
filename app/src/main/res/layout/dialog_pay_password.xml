<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_30"
        android:background="@drawable/cg_verify_code_bg">

        <TextView
            android:id="@+id/tv_title_invest_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入还款密码确认还款"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_16"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_25"/>

        <TextView
            android:id="@+id/tv_invest_verify"
            android:layout_below="@+id/tv_title_invest_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#666666"
            android:visibility="gone"
            android:textSize="@dimen/dimen_14"
            android:layout_centerHorizontal="true"/>

        <com.cstz.MyWidget.MClearEditText
            android:id="@+id/et_invest_verify"
            android:layout_width="@dimen/dimen_220"
            android:layout_height="@dimen/dimen_38"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/edittext_bg_cg"
            android:hint="请输入还款密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#444444"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="@dimen/dimen_15"
            android:layout_below="@+id/tv_invest_verify"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"/>

        <TextView
            android:id="@+id/tv_invest_verify_tip"
            android:layout_width="@dimen/dimen_210"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_10"
            android:textColor="@color/navigation_cg"
            android:layout_below="@+id/et_invest_verify"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_centerHorizontal="true"
            android:text="温馨提示：如果没有设置还款密码，则与登录密码一致"/>

        <LinearLayout
            android:id="@+id/layout_button_no"
            android:layout_width="@dimen/dimen_90"
            android:layout_height="@dimen/dimen_32"
            android:background="@drawable/button_normal"
            android:layout_below="@+id/tv_invest_verify_tip"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_45"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button_yes"
            android:layout_width="@dimen/dimen_90"
            android:layout_height="@dimen/dimen_32"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_45"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal"
            android:layout_below="@+id/tv_invest_verify_tip"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_14"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>