<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_fingerprint_unlock_logo"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_70"
        android:src="@drawable/logo_login"/><!--@mipmap/log-->

    <LinearLayout
        android:id="@+id/ll_fingerprint_unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_fingerprint_unlock_logo"
        android:layout_marginTop="@dimen/dimen_15"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_14"/>

        <TextView
            android:id="@+id/tv_fingerprint_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="177****9206"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/dimen_15"/>

    </LinearLayout>

    <com.cstz.cunguan.fingerprint.FingerPrinterView
        android:id="@+id/fpv_fingerprint_unlock"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_80"
        android:layout_below="@+id/ll_fingerprint_unlock"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_50"/>

    <TextView
        android:id="@+id/tv_fingerprint_unlock_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_60"
        android:text="其他用户登录"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_15"/>


</RelativeLayout>